{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "extends": {
      "type": "string",
      "description": "Extend another theme. Value is a URI to the theme to be extended."
    },
    "page": {
      "$ref": "#/definitions/page_type",
      "description": "Page configuration."
    },
    "header": {
      "$ref": "#/definitions/header_type",
      "description": "Page header configuration."
    },
    "footer": {
      "$ref": "#/definitions/header_type",
      "description": "Page footer configuration."
    },
    "style": {
      "$ref": "#/definitions/style_type",
      "description": "Style configuration."
    },
    "mirror_page_margins": {
      "type": "boolean",
      "description": "Duplex pages with recto and verso pages.",
      "default": false
    },
    "blank_pages": {
      "type": "boolean",
      "description": "Mark blank pages with 'This page intentionally left blank'.",
      "default": false
    },
    "body_column_count": {
      "type": "integer",
      "description": "Column count on content pages.",
      "default": 1
    },
    "index_column_count": {
      "type": "integer",
      "description": "Column count on index pages.",
      "default": 2
    },
    "column_gap": {
      "$ref": "#/definitions/length_type",
      "description": "Column gap on multi column pages."
    },
    "force_page_count": {
      "type": "string",
      "enum": [
        "auto",
        "even",
        "odd"
      ],
      "default": "auto",
      "description": "Force chapter to end on even or odd pages."
    },
    "chapter_layout": {
      "type": "string",
      "enum": [
        "MINITOC",
        "BASIC"
      ],
      "default": "MINITOC",
      "description": "Generate TOC for section."
    },
    "cover_image_metadata": {
      "type": "string",
      "description": "Name of metadata element to use as cover image.",
      "default": null
    },
    "cover_image_topic": {
      "type": "string",
      "description": "Outputclass for cover topic.",
      "default": null
    },
    "bookmark_style": {
      "type": "string",
      "enum": [
        "COLLAPSED",
        "EXPANDED"
      ],
      "default": "COLLAPSED",
      "description": "Expand state of PDF bookmarks."
    },
    "toc_maximum_level": {
      "type": "integer",
      "description": "Maximum TOC depth.",
      "default": 4
    },
    "task_label": {
      "type": "boolean",
      "description": "Generate labels for task sections.",
      "default": false
    },
    "include_related_links": {
      "type": "string",
      "enum": [
        "none",
        "all",
        "nofamily"
      ],
      "default": "nofamily",
      "description": "Specifies which link types are used to generate related links."
    },
    "table_continued": {
      "type": "boolean",
      "description": "Generate 'Table continued' on page break within table.",
      "default": false
    },
    "page_number": {
      "type": "string",
      "enum": [
        "page",
        "chapter-page"
      ],
      "description": "Generate page numbers with chapter number.",
      "default": "page"
    }
  },
  "definitions": {
    "length_type": {
      "type": "string",
      "pattern": "^-?\\d+(\\.\\d+)?(cm|mm|in|pt|pc|px|em)?$"
    },
    "colour_type": {
      "type": "string",
      "pattern": "^(#[a-eA-E0-9]{6}|#[a-eA-E0-9]{3}|rgb\\(\\d+,\\d+,\\d+\\)|rgb\\(\\d+%,\\d+%,\\d+%\\)|transparent|aqua|black|blue|cyan|fuchsia|gray|green|lime|maroon|navy|olive|orange|pink|purple|red|silver|teal|white|yellow|inherit)$"
    },
    "font-weight_type": {
      "type": "string",
      "enum": [
        "normal",
        "bold",
        "bolder",
        "lighter",
        "100",
        "200",
        "300",
        "400",
        "500",
        "600",
        "700",
        "800",
        "900",
        "inherit"
      ]
    },
    "border_style_type": {
      "type": "string",
      "enum": [
        "none",
        "hidden",
        "dotted",
        "dashed",
        "solid",
        "double",
        "groove",
        "ridge",
        "inset",
        "outset",
        "inherit"
      ]
    },
    "block_style_type": {
      "type": "object",
      "properties": {
        "background-color": {
          "$ref": "#/definitions/colour_type"
        },
        "padding-before": {
          "$ref": "#/definitions/length_type"
        },
        "padding-end": {
          "$ref": "#/definitions/length_type"
        },
        "padding-after": {
          "$ref": "#/definitions/length_type"
        },
        "padding-start": {
          "$ref": "#/definitions/length_type"
        },
        "end-indent": {
          "$ref": "#/definitions/length_type"
        },
        "border-before-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-before-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-before-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-end-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-end-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-end-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-after-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-after-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-after-color": {
          "$ref": "#/definitions/colour_type"
        },
        "border-start-style": {
          "$ref": "#/definitions/border_style_type"
        },
        "border-start-width": {
          "$ref": "#/definitions/length_type"
        },
        "border-start-color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-family": {
          "type": "string"
        },
        "font-size": {
          "$ref": "#/definitions/length_type"
        },
        "color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-weight": {
          "$ref": "#/definitions/font-weight_type"
        },
        "font-style": {
          "type": "string"
        },
        "text-decoration": {
          "type": "string"
        },
        "text-align": {
          "type": "string"
        },
        "start-indent": {
          "$ref": "#/definitions/length_type"
        },
        "line-height": {
          "$ref": "#/definitions/length_type"
        },
        "space-before": {
          "$ref": "#/definitions/length_type"
        },
        "space-after": {
          "$ref": "#/definitions/length_type"
        }
      }
    },
    "inline_style_type": {
      "type": "object",
      "properties": {
        "font-family": {
          "type": "string"
        },
        "font-size": {
          "$ref": "#/definitions/length_type"
        },
        "color": {
          "$ref": "#/definitions/colour_type"
        },
        "background-color": {
          "$ref": "#/definitions/colour_type"
        },
        "font-weight": {
          "$ref": "#/definitions/font-weight_type"
        },
        "font-style": {
          "type": "string",
          "enum": [
            "normal",
            "italic",
            "oblique",
            "backslant",
            "inherit"
          ]
        },
        "text-decoration": {
          "type": "string"
        },
        "line-height": {
          "$ref": "#/definitions/length_type"
        }
      }
    },
    "page_type": {
      "type": "object",
      "properties": {
        "height": {
          "$ref": "#/definitions/length_type",
          "description": "Page height.",
          "default": "11in"
        },
        "width": {
          "$ref": "#/definitions/length_type",
          "description": "Page width.",
          "default": "8.5in"
        },
        "top": {
          "$ref": "#/definitions/length_type",
          "description": "Page top margin.",
          "default": "20mm"
        },
        "outside": {
          "$ref": "#/definitions/length_type",
          "description": "Page outside margin.",
          "default": "20mm"
        },
        "bottom": {
          "$ref": "#/definitions/length_type",
          "description": "Page bottom margin.",
          "default": "20mm"
        },
        "inside": {
          "$ref": "#/definitions/length_type",
          "description": "Page inside margin.",
          "default": "20mm"
        }
      },
      "required": [
        "height",
        "width"
      ],
      "description": "Page configuration."
    },
    "content_template_type": {
      "type": "string",
      "description": "Header or footer contents template.",
      "examples": [
        "{title} — {chapter}"
      ]
    },
    "content_array_type": {
      "type": "array",
      "minItems": 0,
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "enum": "field",
              "description": "Type of content block."
            },
            "value": {
              "type": "string",
              "enum": [
                "title",
                "chapter",
                "folio",
                "folio-with-total"
              ],
              "description": "Field name."
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "enum": "text",
              "description": "Type of content block."
            },
            "value": {
              "type": "string",
              "description": "Text content of block."
            }
          }
        }
      ],
      "description": "Header or footer contents. This is the parsed form of contents template.",
      "examples": [
        [
          {
            "kind": "field",
            "value": "title"
          },
          {
            "kind": "text",
            "value": " — "
          },
          {
            "kind": "field",
            "value": "chapter"
          }
        ]
      ]
    },
    "content_type": {
      "type": "object",
      "properties": {
        "content": {
          "oneOf": [
            {
              "$ref": "#/definitions/content_template_type"
            },
            {
              "$ref": "#/definitions/content_array_type"
            }
          ]
        }
      }
    },
    "odd_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        },
        {
          "$ref": "#/definitions/content_type"
        }
      ]
    },
    "header_type": {
      "type": "object",
      "properties": {
        "odd": {
          "$ref": "#/definitions/odd_type",
          "description": "Header or footer on verso pages."
        },
        "even": {
          "$ref": "#/definitions/odd_type",
          "description": "Header or footer on recto pages."
        }
      },
      "description": "Page header and footer configuration."
    },
    "body_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
      }
    },
    "topic_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "title-numbering": {
          "type": "boolean",
          "description": "Generate title numbering."
        }
      }
    },
    "dl_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "dl-type": {
          "type": "string",
          "enum": [
            "html",
            "table",
            "list"
          ],
          "description": "Definition list output style."
        }
      }
    },
    "ol_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "ol-1": {
          "type": "string"
        },
        "ol-2": {
          "type": "string"
        },
        "ol-3": {
          "type": "string"
        },
        "ol-4": {
          "type": "string"
        },
        "ol-after-1": {
          "type": "string"
        },
        "ol-after-2": {
          "type": "string"
        },
        "ol-after-3": {
          "type": "string"
        },
        "ol-after-4": {
          "type": "string"
        }
      }
    },
    "ul_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "ul-1": {
          "type": "string"
        },
        "ul-2": {
          "type": "string"
        },
        "ul-3": {
          "type": "string"
        },
        "ul-4": {
          "type": "string"
        }
      }
    },
    "table_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "caption-number": {
          "type": "string",
          "enum": [
            "chapter",
            "document",
            "none"
          ],
          "description": "Number captions."
        },
        "caption-position": {
          "type": "string",
          "enum": [
            "after",
            "before"
          ],
          "description": "Caption position."
        }
      }
    },
    "toc_1_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/block_style_type"
        }
      ],
      "properties": {
        "prefix": {
          "type": "boolean"
        }
      }
    },
    "link_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/inline_style_type"
        }
      ],
      "properties": {
        "link-page-number": {
          "type": "boolean",
          "description": "Generate page number to internal links."
        }
      }
    },
    "tm_type": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/inline_style_type"
        }
      ],
      "properties": {
        "symbol-scope": {
          "type": "string"
        }
      }
    },
    "style_type": {
      "type": "object",
      "properties": {
        "body": {
          "$ref": "#/definitions/body_type"
        },
        "topic": {
          "$ref": "#/definitions/topic_type"
        },
        "topic_topic": {
          "$ref": "#/definitions/topic_type"
        },
        "topic_topic_topic": {
          "$ref": "#/definitions/topic_type"
        },
        "topic_topic_topic_topic": {
          "$ref": "#/definitions/topic_type"
        },
        "section": {
          "$ref": "#/definitions/body_type"
        },
        "example": {
          "$ref": "#/definitions/body_type"
        },
        "example_title": {
          "$ref": "#/definitions/body_type"
        },
        "note": {
          "$ref": "#/definitions/body_type"
        },
        "pre": {
          "$ref": "#/definitions/body_type"
        },
        "codeblock": {
          "$ref": "#/definitions/body_type"
        },
        "dl": {
          "$ref": "#/definitions/dl_type"
        },
        "ol": {
          "$ref": "#/definitions/ol_type"
        },
        "ul": {
          "$ref": "#/definitions/ul_type"
        },
        "table": {
          "$ref": "#/definitions/table_type"
        },
        "fig": {
          "$ref": "#/definitions/table_type"
        },
        "toc_1": {
          "$ref": "#/definitions/toc_1_type"
        },
        "toc_2": {
          "$ref": "#/definitions/body_type"
        },
        "toc_3": {
          "$ref": "#/definitions/body_type"
        },
        "toc_4": {
          "$ref": "#/definitions/body_type"
        },
        "link": {
          "$ref": "#/definitions/link_type"
        },
        "tm": {
          "$ref": "#/definitions/tm_type"
        }
      }
    }
  }
}
