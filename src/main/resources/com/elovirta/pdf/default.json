{
  "brand": {
    "toc": {
      "indent": "20pt"
    }
  },
  "toc": {
    "maximum-level": 6
  },
  "style": {
    "body": {
      "start-indent": "0pt"
    },
    "h1": {
      "title-numbering": true,
      "border-style": "none"
    },
    "h2": {
      "title-numbering": true,
      "border-style": "none"
    },
    "h3": {
      "title-numbering": true
    },
    "h4": {
      "title-numbering": true
    },
    "h5": {
      "title-numbering": true
    },
    "h6": {
      "title-numbering": true
    },
    "chapter": {
      "numbering": "document",
      "title-numbering": true
    },
    "topic": {
      "title-numbering": true
    },
    "part": {
      "title-numbering": true
    },
    "toc": {
      "part": {
        "start-indent": "0pt"
      },
      "chapter": {
        "start-indent": "0pt"
      },
      "1": {
        "start-indent": "0pt",
        "title-numbering": true
      },
      "2": {
        "start-indent": "$brand-toc-indent",
        "title-numbering": true
      },
      "3": {
        "start-indent": "2 * $brand-toc-indent",
        "title-numbering": true
      },
      "4": {
        "start-indent": "3 * $brand-toc-indent",
        "title-numbering": true
      },
      "5": {
        "start-indent": "4 * $brand-toc-indent",
        "title-numbering": true
      },
      "6": {
        "start-indent": "5 * $brand-toc-indent",
        "title-numbering": true
      }
    }
  }
}
